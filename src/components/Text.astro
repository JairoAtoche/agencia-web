---
interface Props {
	tagType?: string;
	size: 'xs' | 's' | 'n' | 'm' | 'l';
	bolded?: boolean;
	classes?: string;
}

const { tagType = 'p', size, bolded = false, classes, ...rest } = Astro.props;
const Tag = tagType;
---

<Tag class:list={[size, { bold: bolded }, classes]} {...rest}>
	<slot />
</Tag>
<style lang='scss'>
	@use '@styles/utils/mixins.scss';

	.bold {
		font-weight: bold;
	}
</style>
