---
import { Icon } from 'astro-icon';

interface Props {
	text: string;
	href?: string;
	size: 'xs' | 's' | 'n' | 'm' | 'l';
	icon?: {
		name: string;
		side: 'left' | 'right';
		hiddenIcon?: boolean;
	};
	iconTwo?: {
		name: string;
		side: 'left' | 'right';
		hiddenIcon?: boolean;
	};
	bolded?: boolean;
	underline?: boolean;
	borderVisible?: boolean;
	classes?: string;
}

const {
	text,
	href,
	size,
	icon,
	iconTwo,
	bolded = false,
	borderVisible = false,
	underline = false,
	classes,
	...rest
} = Astro.props;
---

<a
	href={href}
	class:list={[
		size,
		'link',
		classes,
		{ bold: bolded },
		{ bordered: borderVisible },
		{ 'font-underline': underline },
	]}
	{...rest}>
	{
		icon && icon.side === 'left' && (
			<Icon name={icon.name} class={icon.hiddenIcon ? 'hidden-icon' : ''} />
		)
	}
	{
		iconTwo && iconTwo.side === 'left' && (
			<Icon
				name={iconTwo.name}
				class={iconTwo.hiddenIcon ? 'hidden-icon' : ''}
			/>
		)
	}
	<span>{text}</span>
	{
		icon && icon.side === 'right' && (
			<Icon name={icon.name} class={icon.hiddenIcon ? 'hidden-icon' : ''} />
		)
	}
	{
		iconTwo && iconTwo.side === 'right' && (
			<Icon
				name={iconTwo.name}
				class={iconTwo.hiddenIcon ? 'hidden-icon' : ''}
			/>
		)
	}
</a>
<style lang='scss'>
	@use '@styles/utils/mixins.scss';
	.hidden-icon {
		@include mixins.responsive(large) {
			display: none;
		}
	}
	.bordered:after {
		content: '';
		width: 0;
		height: 4px;
		background-color: var(--bg-tertiary-color);
		position: absolute;
		bottom: 0;
		right: 50%; /* 0% Der a Izq / 50% Medio a extremo / 100% Izq a Der */
		transition: all 0.5s;
		will-change: width;
	}
	.bordered:hover:after {
		width: 100%;
		right: 0;
	}
	.bold {
		font-weight: bold;
	}
	.font-underline {
		text-decoration: underline;
	}
</style>
